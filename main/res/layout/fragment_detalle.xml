<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detalle">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0px"
        android:padding="0px">

        <ImageView
            android:id="@+id/detImagenPais"
            android:layout_width="428dp"
            android:layout_height="227dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@color/purple_200"
            tools:src="@tools:sample/backgrounds/scenic" />

        <TextView
            android:id="@+id/detNombrePais"
            android:layout_width="264dp"
            android:layout_height="122dp"
            android:layout_marginTop="72dp"
            android:text="NOMBRE PAÍS"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/detImagenPais" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="206dp"
            android:layout_height="37dp"
            android:layout_marginTop="48dp"
            android:text="Acerca del país"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.136"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detNombrePais" />

        <TextView
            android:id="@+id/detDescripcionPais"
            android:scrollbars = "vertical"
            android:layout_width="371dp"
            android:layout_height="206dp"
            android:layout_marginTop="12dp"
            android:text="Descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción descripción"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/tvMigrar3"
            android:layout_width="139dp"
            android:layout_height="45dp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="8dp"
            android:text="Migrar"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toStartOf="@+id/detalleFlgMigrar"
            app:layout_constraintTop_toBottomOf="@+id/detDescripcionPais" />

        <TextView
            android:id="@+id/tvVisitar3"
            android:layout_width="119dp"
            android:layout_height="46dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="52dp"
            android:text="Visitar"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintStart_toEndOf="@+id/detalleFlgMigrar"
            app:layout_constraintTop_toBottomOf="@+id/detDescripcionPais" />

        <Switch
            android:id="@+id/detalleFlgMigrar"
            android:layout_width="58dp"
            android:layout_height="46dp"
            android:layout_marginTop="548dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/detBanderaPais"
            android:layout_width="97dp"
            android:layout_height="75dp"
            android:scaleType="fitStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/containerRestricciones"
            android:layout_width="408dp"
            android:layout_height="242dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.533"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>